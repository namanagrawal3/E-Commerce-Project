<% layout('layouts/boilerplate') -%>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0"><i class="fas fa-user-circle me-2"></i> User Profile </h4>
                        <a href="/products" class="btn btn-sm btn-light">
                            <i class="fas fa-arrow-left me-1"></i> Back
                        </a>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <div class="avatar-circle mb-3" style="width: 120px; height: 120px; margin: 0 auto; background: linear-gradient(135deg, #0077b6, #023e8a); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-user fa-4x text-white"></i>
                        </div>
                        <h3 class="mb-0"><%= user.username %></h3>
                    </div>
                    
                    <div class="user-details">
                        <div class="detail-item p-3 mb-3 bg-light rounded">
                            <div class="d-flex align-items-center">
                                <div class="icon-circle me-3" style="width: 40px; height: 40px; background: #e9ecef; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                    <i class="fas fa-envelope text-primary"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Email</small>
                                    <div class="fw-bold"><%= user.email %></div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="detail-item p-3 bg-light rounded">
                            <div class="d-flex align-items-center">
                                <div class="icon-circle me-3" style="width: 40px; height: 40px; background: #e9ecef; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                    <i class="fas fa-user-shield text-primary"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Account Type</small>
                                    <div class="fw-bold text-capitalize"><%= user.role %></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
                <div class="card-footer bg-light text-muted text-center">
                    <% if (user.role === 'buyer') { %>
                        <small> Empowering smarter shopping, one click at a time. </small>
                    <% } else { %>
                        <small> Turning passion into products, and products into progress. </small>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }
    
    .card-header {
        border-bottom: none;
        padding: 1.25rem 1.5rem;
    }
    
    .detail-item {
        transition: all 0.3s ease;
    }
    
    .detail-item:hover {
        background-color: #f1f8ff !important;
        transform: translateX(5px);
    }
    
    .badge {
        font-weight: 500;
        padding: 0.4em 0.8em;
    }
    
    @media (max-width: 576px) {
        .card-body {
            padding: 1.5rem !important;
        }
        
        .btn {
            padding: 0.375rem 0.75rem;
            font-size: 0.875rem;
        }
    }
</style>

<%- include('partials/footer') %>